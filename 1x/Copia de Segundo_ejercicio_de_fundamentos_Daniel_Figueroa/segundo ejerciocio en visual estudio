//lienzo
var diametro;
// medidas del lienzo
var x; //ancho
var y; //alto
//Colores del fondo
var bR;
var bG;
var bB;
//Colores del circulo
var fR;
var fG;
var fB;

// tama√±o del lienzo
function settings () {
  size(500,500);
}

//circulo, (diametro=el valor que le toca)
function setup (){
  diametro=100;
  x=500/2;
  y=0;
 
  //colores del background
  bR=0;
  bG=0;
  bB=0;
  // colores del circulo
  fR=500;
  fG=0;
  fB=0;
}

function draw(){
  background(0,0,0);
  fill(fR,fG,fB);
  ellipse(x,y,diametro,diametro);
  y+= 1;
  y=(y+1<height)?y+1:0;
  
}